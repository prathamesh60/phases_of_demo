<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Economy">


    <TextView
        android:id="@+id/option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="#FFFFFF"
        android:paddingRight="100dp"
        android:paddingTop="20dp"
        android:text="Farmer Subsidies"
        android:textColor="#151414"
        android:textSize="18sp" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/farmer_subsidies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option1"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        app:dsb_indicatorColor="#39D7EC"
        app:dsb_max="3"
        app:dsb_min="1"
        app:dsb_progressColor="#39D7EC"
        app:dsb_rippleColor="#39D7EC"
        app:dsb_trackColor="#39D7EC" />

    <TextView
        android:id="@+id/option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/farmer_subsidies"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="#FFFFFF"
        android:paddingRight="100dp"
        android:paddingTop="20dp"
        android:text="Minimum Wage"
        android:textColor="#151414"
        android:textSize="18sp" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/minimum_wage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option2"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        app:dsb_indicatorColor="#39D7EC"
        app:dsb_max="3"
        app:dsb_min="1"
        app:dsb_progressColor="#39D7EC"
        app:dsb_rippleColor="#39D7EC"
        app:dsb_trackColor="#39D7EC" />

    <TextView
        android:id="@+id/option3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/minimum_wage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="#FFFFFF"
        android:paddingRight="100dp"
        android:paddingTop="20dp"
        android:text="Stimulus spending"
        android:textColor="#151414"
        android:textSize="18sp" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/stimulus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option3"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        app:dsb_indicatorColor="#39D7EC"
        app:dsb_max="3"
        app:dsb_min="1"
        app:dsb_progressColor="#39D7EC"
        app:dsb_rippleColor="#39D7EC"
        app:dsb_trackColor="#39D7EC" />

    <Button
        android:id="@+id/record"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/stimulus"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorAccent"
        android:textSize="26sp"
        android:text="Record Changes"
        android:textColor="#ffffff"
        />

</RelativeLayout>