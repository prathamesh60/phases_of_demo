<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Taxation">

    <TextView
        android:id="@+id/option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:background="#FFFFFF"
        android:paddingRight="100dp"
        android:paddingTop="10dp"
        android:text="Low Income Tax"
        android:textColor="#151414"
        android:textSize="10sp" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/low_income_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option1"
        android:layout_centerInParent="true"
        app:dsb_indicatorColor="#39D7EC"
        app:dsb_max="3"
        app:dsb_min="1"
        app:dsb_progressColor="#39D7EC"
        app:dsb_rippleColor="#39D7EC"
        app:dsb_trackColor="#39D7EC" />

    <TextView
        android:id="@+id/option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/low_income_tax"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="#FFFFFF"
        android:paddingRight="100dp"
        android:paddingTop="10dp"
        android:text="Middle Income Tax"
        android:textColor="#151414"
        android:textSize="10sp" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/middle_income_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option2"
        android:layout_centerInParent="true"
        app:dsb_indicatorColor="#39D7EC"
        app:dsb_max="3"
        app:dsb_min="1"
        app:dsb_progressColor="#39D7EC"
        app:dsb_rippleColor="#39D7EC"
        app:dsb_trackColor="#39D7EC" />

    <TextView
        android:id="@+id/option3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/middle_income_tax"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="#FFFFFF"
        android:paddingRight="100dp"
        android:paddingTop="10dp"
        android:text="High Income Tax"
        android:textColor="#151414"
        android:textSize="10sp" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/high_income_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option3"
        android:layout_centerInParent="true"
        app:dsb_indicatorColor="#39D7EC"
        app:dsb_max="3"
        app:dsb_min="1"
        app:dsb_progressColor="#39D7EC"
        app:dsb_rippleColor="#39D7EC"
        app:dsb_trackColor="#39D7EC" />

    <TextView
        android:id="@+id/option4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/high_income_tax"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="#FFFFFF"
        android:paddingRight="100dp"
        android:paddingTop="10dp"
        android:text="Sales Tax"
        android:textColor="#151414"
        android:textSize="10sp" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/sales_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option4"
        android:layout_centerInParent="true"
        app:dsb_indicatorColor="#39D7EC"
        app:dsb_max="4"
        app:dsb_min="1"
        app:dsb_progressColor="#39D7EC"
        app:dsb_rippleColor="#39D7EC"
        app:dsb_trackColor="#39D7EC" />

    <TextView
        android:id="@+id/option5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sales_tax"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="#FFFFFF"
        android:paddingRight="100dp"
        android:paddingTop="10dp"
        android:text="Business Tax"
        android:textColor="#151414"
        android:textSize="10sp" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/business_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option5"
        android:layout_centerInParent="true"
        app:dsb_indicatorColor="#39D7EC"
        app:dsb_max="5"
        app:dsb_min="1"
        app:dsb_progressColor="#39D7EC"
        app:dsb_rippleColor="#39D7EC"
        app:dsb_trackColor="#39D7EC" />

    <TextView
        android:id="@+id/option9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/business_tax"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="#FFFFFF"
        android:paddingRight="100dp"
        android:paddingTop="10dp"
        android:text="Corporation Tax"
        android:textColor="#151414"
        android:textSize="10sp" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/corporation_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option9"
        android:layout_centerInParent="true"
        app:dsb_indicatorColor="#39D7EC"
        app:dsb_max="5"
        app:dsb_min="1"
        app:dsb_progressColor="#39D7EC"
        app:dsb_rippleColor="#39D7EC"
        app:dsb_trackColor="#39D7EC" />

    <TextView
        android:id="@+id/option6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/corporation_tax"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="#FFFFFF"
        android:paddingRight="100dp"
        android:paddingTop="10dp"
        android:text="Capital Gains Tax"
        android:textColor="#151414"
        android:textSize="10sp" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/capital_gains_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option6"
        android:layout_centerInParent="true"
        app:dsb_indicatorColor="#39D7EC"
        app:dsb_max="3"
        app:dsb_min="1"
        app:dsb_progressColor="#39D7EC"
        app:dsb_rippleColor="#39D7EC"
        app:dsb_trackColor="#39D7EC" />

    <TextView
        android:id="@+id/option7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/capital_gains_tax"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="#FFFFFF"
        android:paddingRight="100dp"
        android:paddingTop="10dp"
        android:text="Inheritance Tax"
        android:textColor="#151414"
        android:textSize="10sp" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/inheritance_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option7"
        android:layout_centerInParent="true"
        app:dsb_indicatorColor="#39D7EC"
        app:dsb_max="3"
        app:dsb_min="1"
        app:dsb_progressColor="#39D7EC"
        app:dsb_rippleColor="#39D7EC"
        app:dsb_trackColor="#39D7EC" />

    <TextView
        android:id="@+id/option8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inheritance_tax"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="#FFFFFF"
        android:paddingRight="100dp"
        android:paddingTop="10dp"
        android:text="Property Tax"
        android:textColor="#151414"
        android:textSize="10sp" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/property_tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option8"
        android:layout_centerInParent="true"
        app:dsb_indicatorColor="#39D7EC"
        app:dsb_max="4"
        app:dsb_min="1"
        app:dsb_progressColor="#39D7EC"
        app:dsb_rippleColor="#39D7EC"
        app:dsb_trackColor="#39D7EC" />
    <Button
        android:id="@+id/record"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/property_tax"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorAccent"
        android:textSize="10sp"
        android:text="Record Changes"
        android:textColor="#ffffff"
        />

</RelativeLayout>